/* toast style start */
.ui-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  max-width: 75%;
  border-radius: 8rpx;
  background-color: rgba(255, 135, 160, 0.9);
  color: #fff;
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 8rpx 12rpx;
  text-align: center;
  word-break: break-all;
  box-sizing: border-box;
  z-index: 3000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.5s ease-out;
}

.ui-toast.active {
  opacity: 1;
  visibility: visible;
}
/* toast style end */

