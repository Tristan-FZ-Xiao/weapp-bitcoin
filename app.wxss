/* common style start */
.hidden {
  display: none !important;
  opacity: 0 !important;
}

.tapback {
  background-color: #d9d9d9 !important;
}

.clearfix::after {
  display: block;
  content: "";
  visibility: hidden;
  height: 0;
  clear: both;
}

.clearfix {
  zoom: 1;
}

page {
  display: block;
  font-family: "STHeiti", "Microsoft YaHei", Helvetica, Arial, sans-serif;
  color: #323232;
  background-color: #eee;
  -webkit-font-smoothing: antialiased;
  -webkit-overflow-scrolling: touch;
  word-break: break-word;
  overflow-x: hidden;
  position: relative;
}

.wrapper {
  height: 100%;
  padding: 0;
  margin: 0;
}

.wrapper-empty {
  position: fixed;
  width: 100%;
  left: 50%;
  top: 50%;
}

.wrapper-empty .page-empty {
  position: absolute;
  text-align: center;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.wrapper-empty .page-empty .empty-girl {
  height: 270rpx;
  width: 270rpx;
  font-size: 0;
}

.wrapper-empty .page-empty .running-girl {
  height: 288rpx;
  width: 180rpx;
  font-size: 0;
}

.wrapper-empty .page-empty .empty-tips {
  display: block;
  margin: 20rpx auto 0;
  font-size: 32rpx;
  color: #888;
  line-height: 48rpx;
  width: 80%;
  min-width: 512rpx;
}

.line-1,
.line-2,
.line-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  display: -webkit-box;
  word-break: break-all;
  line-height: 40rpx;
}

.vertical {
  -webkit-box-orient: vertical;
}

.horizontal {
  -webkit-box-orient: horizontal;
}

.line-1 {
  height: 40rpx;
  -webkit-line-clamp: 1;
}

.line-2 {
  height: 80rpx;
  -webkit-line-clamp: 2;
}

.line-3 {
  height: 120rpx;
  -webkit-line-clamp: 3;
}

.line-bottom::after,
.line-right::before,
.line-top::before {
  content: " ";
  position: absolute;
  background-color: #d9d9d9;
}

.line-bottom::after {
  left: 0;
  bottom: 0;
  height: 1px;
  width: 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.line-right::before {
  right: 0;
  top: 0;
  width: 1px;
  height: 100%;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.line-top::before {
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

/* common style end */

/* loading style start */
.ui-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #666;
}

.ui-loading-text {
  display: inline-block;
  color: #666;
  font-size: 28rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.ui-loading-img {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.ui-loading-wrap {
  text-align: center;
  padding: 0 40rpx 40rpx 40rpx;
}

.ui-loading-content {
  color: #666;
  padding: 10rpx;
}

.ui-loading-btn text {
  display: block;
  padding: 10rpx;
  border-radius: 6rpx;
  background: #e6e6e6;
  color: #666;
  text-align: center;
}

/* loading style end */

