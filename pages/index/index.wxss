/**index.wxss**/
/* header 导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  color: #888;
  background-color: #fff;
  font-size: 28rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: stretch;
  height: 70rpx;
  line-height: 70rpx;
  z-index: 999;
}

.tabitem {
  flex: 1 1 auto;
  text-align: center;
  box-sizing: border-box;
}

.tabitem.active {
  color: #323232;
  border-bottom-style: solid;
  border-bottom-width: 4rpx;
  border-bottom-color: #000;
  -webkit-transition: color, border-bottom-color 0.5s linear;
  transition: color, border-bottom-color 0.5s linear;
}

/* swpier 轮播图 */
.swiper {
  margin-top: 70rpx;
  height: 400rpx;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 400rpx;
}

.swiper-nav {
  display: block;
  height: 100%;
  width: 100%;
}

.swiper-desc {
  position: absolute;
  display: block;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 40rpx 20rpx 20rpx;
  font-size: 40rpx;
  color: #fff;
  background: gradient(linear, center top, center bottom, from(hsla(0, 0%, 100%, 0)), to(rgba(0, 0, 0, 0.6)));
  background: -webkit-gradient(linear, center top, center bottom, from(hsla(0, 0%, 100%, 0)), to(rgba(0, 0, 0, 0.6)));
}

.swiper-text {
  float: left;
  width: 600rpx;
}

.swiper-id {
  float: right;
}