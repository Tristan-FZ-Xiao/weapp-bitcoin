page {
  background-color: #fff;
}

.receive-wrap {
  padding: 54rpx 40rpx;
}

.receive-avatar {
  width: 128rpx;
  height: 128rpx;
  font-size: 0;
  margin: 0 auto 30rpx;
}

.receive-img {
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
  background-color: #eee;
}

.receive-addr,
.receive-wallet {
  font-size: 24rpx;
  color: #000;
  text-align: center;
  margin-bottom: 10rpx;
}

.receive-wallet {
  margin-bottom: 30rpx;
}

.receive-qrcode {
  width: 200rpx;
  height: 200rpx;
  font-size: 0;
  margin: 0 auto 60rpx;
}

.receive-qr {
  display: block;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
}
