<!--receive.wxml-->

<view class="container receive-wrap">
  <view class="receive-avatar">
    <image src="{{ avatar }}" class="receive-img" mode="aspectFill"></image>
  </view>
  <view class="receive-addr">
    <text>钱包地址：</text>
  </view>
  <view class="receive-wallet">
    <text>{{ walletId }}</text>
  </view>
  <view class="receive-qrcode">
    <image src="{{ qrcode }}" class="receive-qr" mode="aspectFill"></image>
  </view>
  <view class="receive-btns">
    <button type="primary" size="default" bindtap="handleCopy"> 复制钱包地址 </button>
  </view>
</view>