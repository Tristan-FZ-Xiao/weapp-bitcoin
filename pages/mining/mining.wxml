<!--mining.wxml-->
<!-- 导入模板 -->
<import src="../common/template.wxml" />

<!--加载动画-->
<view class="container mining-wrap">
  <view class="todo">
    <view class="todo-wrap">
      <image class="todo-img" src="/images/icon_mining.png"></image>
    </view>
    <view class="todo-txt">挖矿功能开发中</view>
  </view>
  <view hidden="true" class="mining">
    <view class="mining-item">
      <view class="mining-title">挖矿时长：</view>
      <view class="mining-time">{{ time }}</view>
    </view>
    <view class="mining-item">
      <view class="mining-title">挖出币：</view>
      <view class="mining-time"><text class="mining-money">{{coin}}</text>xbtc</view>
    </view>
    <view class="mining-item">
      <view class="mining-title">市值：</view>
      <view class="mining-time">￥102322.21</view>
    </view>
  </view>
  <view hidden="true" class="mining-coin">
    <image class="mining-gold" src="/images/gold_coin.png"></image>
  </view>
  <view wx:if="{{articles && articles.length}}" class="common-footer">
    <template is="articleItem" data="{{ ...articles[0] }}" />
    <template is="footer" data="{{ cid: cid, name: '挖矿' }}" />
  </view>
</view>
